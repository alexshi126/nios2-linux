#!/bin/sh

FS_PATH="/home/ltp/testcases/bin"

if [ $# -ne 4 ]
    then
        exit 2
    fi

    testvol=$1
    numsubdirs=$2
    numfiles=$3
    numloops=$4

    i=0;
    while [ "$i" -lt "$numsubdirs" ]; do
        [ -d dir$i ] || { \
            echo "$0: mkdir dir$i"
            mkdir -p dir$i || $FS_PATH/err_log "mkdir dir$i FAILED"
        }
	 i=`expr $i + 1`
    done;
 
    exit 0